{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["android", "build", "ios", "node_modules"]
}
