{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "android",
    "build",
    "ios",
    "node_modules"
  ]
}
